<mvc:View controllerName="sap.com.managepurchaseorder.controller.ListPage"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:core="sap.ui.core"
          xmlns="sap.m"
          xmlns:f="sap.f"
          xmlns:layout="sap.ui.layout"
          xmlns:smartTable="sap.ui.comp.smarttable"
          xmlns:smartFilter="sap.ui.comp.smartfilterbar"
          xmlns:html="http://www.w3.org/1999/xhtml"
          height="100%">
    
    <f:DynamicPage id="dynamicPageId" headerExpanded="{/headerExpanded}" toggleHeaderOnTitleClick="{/titleClickable}">
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <smartFilter:SmartFilterBar id="smartFilterBar" 
                                            entitySet="PurchaseOrderT" 
                                            persistencyKey="SmartFilter_Explored" 
                                            basicSearchFieldName="PurchaseOrder" 
                                            enableBasicSearch="false">
                    <smartFilter:controlConfiguration>
                        <smartFilter:ControlConfiguration key="PurchaseOrder" 
                                                          visibleInAdvancedArea="true"   
                                                          label="Purchase Order"/>
                    </smartFilter:controlConfiguration>
                </smartFilter:SmartFilterBar>
            </f:DynamicPageHeader>
        </f:header>
        
        <f:content>
            <smartTable:SmartTable id="LineItemsSmartTable" 
                                   entitySet="PurchaseOrderT" 
                                   smartFilterId="smartFilterBar" 
                                   tableType="ResponsiveTable" 
                                   useExportToExcel="true" 
                                   beforeExport="onBeforeExport" 
                                   useVariantManagement="true" 
                                   useTablePersonalisation="true" 
                                   header="Line Items" 
                                   showRowCount="true" 
                                   persistencyKey="SmartTableAnalytical_Explored" 
                                   enableAutoBinding="true" 
                                   class="sapUiResponsiveContentPadding" 
                                   enableAutoColumnWidth="false" 
                                   editTogglable="false"
                                   initiallyVisibleFields="PurchaseOrder,SupplierName,Supplier,GrossAmountInTransacCurrency,Status">
                <smartTable:customToolbar>
                  	<OverflowToolbar design="Transparent">
                    	<ToolbarSpacer/>
                    	<Button icon="sap-icon://create" tooltip="Create" text="Create" press="onCreate"/>
                    	</OverflowToolbar>

                </smartTable:customToolbar>
                 <Table selectionChange="onRowPress" mode="SingleSelectMaster" id="oTable">
                	
            </Table> 
            </smartTable:SmartTable>
        </f:content>
    </f:DynamicPage>
</mvc:View>
